{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Graphql Docker Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost", // ホストマシン（VSCodeが実行されている場所）
                "port": 5678 // デバッガがリッスンするポート
            },
            "pathMappings": [
                {
                    // ローカルの作業ディレクトリをコンテナ内の/appにマッピング
                    "localRoot": "${workspaceFolder}/backend/services/graphql-service/app",
                    "remoteRoot": "/app"
                },
                {
                    // ローカルの共有ライブラリをコンテナ内の/sharedにマッピング
                    "localRoot": "${workspaceFolder}/backend/shared",
                    "remoteRoot": "/shared"
                }
            ]
        },
        {
            "name": "Python: Cart Docker Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5679 // gRPCサービスのデバッグ用ポートに合わせて変更が必要な場合があります
            },
            "pathMappings": [
                {
                    // ローカルのgRPCサービスディレクトリをコンテナ内の/appにマッピング
                    "localRoot": "${workspaceFolder}/backend/services/grpc-cart-service/app",
                    "remoteRoot": "/app"
                },
                {
                    // 共有ライブラリのマッピング（共通であればそのまま）
                    "localRoot": "${workspaceFolder}/backend/shared",
                    "remoteRoot": "/shared"
                }
            ]
        },
        {
            "name": "Next.js: debug server-side",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/frontend"
        },
        {
            "name": "Next.js: debug client-side",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000"
        },
        {
            "name": "Next.js: debug full stack",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/frontend/node_modules/next/dist/bin/next",
            "runtimeArgs": ["--inspect"],
            "skipFiles": ["<node_internals>/**"],
            "cwd": "${workspaceFolder}/frontend",
            "serverReadyAction": {
                "pattern": "- Local:.+(https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome",
                "killOnServerStop": true,
                "webRoot": "${workspaceFolder}"
            }
        }
    ]
}
